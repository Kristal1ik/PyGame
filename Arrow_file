import pygame


class Arrow(pygame.sprite.Sprite):
    image = pygame.image.load('game_imgs\Arrow.png')
    pushed_arrow_im = pygame.image.load('game_imgs\Pushed_arrow.png')

    def __init__(self, group):
        super().__init__(group)
        self.image = Arrow.image
        self.rect = self.image.get_rect()
        self.rect.x = 20
        self.rect.y = 614
        self.arrow_poz = 1
        self.card_quantity = 3

    def update(self, *args):
        if args and args[0][pygame.K_LEFT]:
            if self.arrow_poz > 1:
                self.rect.left -= 188
                self.arrow_poz -= 1
                # print(self.arrow_poz)
        if args and args[0][pygame.K_RIGHT]:
            if self.arrow_poz < 6:
                self.rect.left += 188
                self.arrow_poz += 1
                print(self.rect.x)
                # print(self.arrow_poz)

        if args and args[0][pygame.K_RETURN]:
            if self.arrow_poz <= self.card_quantity:
                print('Card activated')
                self.card_quantity -= 1
            else:
                if self.card_quantity > 0:
                    print('This slot is blank')
                else:
                    print("You'v not any cards")
